--// comolokko.fun Modern Hub

local loopState = true

local parent = gethui and gethui() or game.CoreGui

-- GUI
local gui = Instance.new("ScreenGui", parent)
gui.Name = "comolokko"

-- bubble
local bubble = Instance.new("TextButton", gui)
bubble.Size = UDim2.new(0,60,0,60)
bubble.Position = UDim2.new(0,20,0.5,0)
bubble.BackgroundColor3 = Color3.fromRGB(255,0,140)
bubble.Text = "‚óè"
bubble.Font = Enum.Font.GothamBold
bubble.TextScaled = true
bubble.Visible = false
Instance.new("UICorner", bubble).CornerRadius = UDim.new(1,0)

-- main frame
local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0,430,0,270)
main.Position = UDim2.new(0.5,-215,0.5,-135)
main.BackgroundColor3 = Color3.fromRGB(25,25,25)
Instance.new("UICorner", main).CornerRadius = UDim.new(0,8)

-- title
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,40)
title.BackgroundTransparency = 1
title.Text = "comolokko.fun"
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.fromRGB(255,0,140)
title.TextSize = 20

-- minimize
local mini = Instance.new("TextButton", main)
mini.Size = UDim2.new(0,30,0,30)
mini.Position = UDim2.new(1,-70,0,5)
mini.Text = "-"
mini.Font = Enum.Font.GothamBold
mini.BackgroundColor3 = Color3.fromRGB(40,40,40)
mini.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", mini)

-- close
local close = Instance.new("TextButton", main)
close.Size = UDim2.new(0,30,0,30)
close.Position = UDim2.new(1,-35,0,5)
close.Text = "X"
close.Font = Enum.Font.GothamBold
close.BackgroundColor3 = Color3.fromRGB(40,40,40)
close.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", close)

-- function textbox
local function box(name, posY)

local b = Instance.new("TextBox", main)
b.Size = UDim2.new(0.8,0,0,35)
b.Position = UDim2.new(0.1,0,posY,0)
b.PlaceholderText = name
b.Font = Enum.Font.Gotham
b.TextColor3 = Color3.new(1,1,1)
b.BackgroundColor3 = Color3.fromRGB(35,35,35)
Instance.new("UICorner", b)

return b

end

local music = box("Music ID",0.2)
local volume = box("Volume",0.4)
local pitch = box("Pitch",0.6)

-- loop
local loopBtn = Instance.new("TextButton", main)
loopBtn.Size = UDim2.new(0.8,0,0,30)
loopBtn.Position = UDim2.new(0.1,0,0.75,0)
loopBtn.Text = "Loop : ON"
loopBtn.Font = Enum.Font.GothamBold
loopBtn.BackgroundColor3 = Color3.fromRGB(255,0,140)
loopBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", loopBtn)

loopBtn.MouseButton1Click:Connect(function()

loopState = not loopState

loopBtn.Text =
loopState and "Loop : ON" or "Loop : OFF"

end)

-- play button
local play = Instance.new("TextButton", main)
play.Size = UDim2.new(0.8,0,0,35)
play.Position = UDim2.new(0.1,0,0.87,0)
play.Text = "PLAY"
play.Font = Enum.Font.GothamBold
play.BackgroundColor3 = Color3.fromRGB(255,0,140)
play.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", play)

-- drag
local dragging, dragStart, startPos

main.InputBegan:Connect(function(input)

if input.UserInputType == Enum.UserInputType.MouseButton1 then

dragging = true
dragStart = input.Position
startPos = main.Position

end

end)

game:GetService("UserInputService").InputChanged:Connect(function(input)

if dragging then

local delta = input.Position - dragStart

main.Position =
UDim2.new(
startPos.X.Scale,
startPos.X.Offset + delta.X,
startPos.Y.Scale,
startPos.Y.Offset + delta.Y
)

end

end)

game:GetService("UserInputService").InputEnded:Connect(function(input)

if input.UserInputType ==
Enum.UserInputType.MouseButton1 then

dragging = false

end

end)

-- buttons
mini.MouseButton1Click:Connect(function()

main.Visible = false
bubble.Visible = true

end)

bubble.MouseButton1Click:Connect(function()

main.Visible = true
bubble.Visible = false

end)

close.MouseButton1Click:Connect(function()

gui:Destroy()

end)

-- play logic
play.MouseButton1Click:Connect(function()

local remote =
game:GetService("Workspace"):
FindFirstChild("AC6_FE_Sounds", true)

if remote then

remote:FireServer(
"PlaySong",
music.Text,
volume.Text or "1",
pitch.Text or "1",
loopState
)

end

end)
