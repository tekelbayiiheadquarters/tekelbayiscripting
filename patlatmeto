--// SYNAPSE X STYLE HUB

local UIS = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local parent = pcall(function() return gethui() end)
and gethui() or game.CoreGui

-- remote
local function getRemote()

local function find(name,p)
local r=p:QueryDescendants(">>RemoteEvent#" .. name)
return r[1]
end

return find("AC6_FE_Sounds",Workspace)
or find("AC6_FE_Sounds",ReplicatedStorage)

end

-- gui
local gui = Instance.new("ScreenGui",parent)

-- main
local main = Instance.new("Frame",gui)

main.Size = UDim2.new(0,650,0,400)
main.Position = UDim2.new(0.5,-325,0.5,-200)

main.BackgroundColor3 = Color3.fromRGB(30,30,30)

Instance.new("UICorner",main)

-- topbar
local top = Instance.new("Frame",main)

top.Size = UDim2.new(1,0,0,40)

top.BackgroundColor3 = Color3.fromRGB(20,20,20)

Instance.new("UICorner",top)

-- title
local title = Instance.new("TextLabel",top)

title.Text = "Synapse X"
title.Font = Enum.Font.GothamBold
title.TextSize = 18

title.TextColor3 = Color3.fromRGB(0,170,255)

title.BackgroundTransparency = 1
title.Position = UDim2.new(0,10,0,0)
title.Size = UDim2.new(0,200,1,0)

-- close
local close = Instance.new("TextButton",top)

close.Text = "X"
close.Font = Enum.Font.GothamBold

close.Size = UDim2.new(0,40,1,0)
close.Position = UDim2.new(1,-40,0,0)

close.BackgroundTransparency = 1
close.TextColor3 = Color3.fromRGB(255,80,80)

-- sidebar
local side = Instance.new("Frame",main)

side.Size = UDim2.new(0,150,1,-40)
side.Position = UDim2.new(0,0,0,40)

side.BackgroundColor3 = Color3.fromRGB(25,25,25)

-- tab button
local musicTab = Instance.new("TextButton",side)

musicTab.Size = UDim2.new(1,0,0,40)

musicTab.Text = "Music"

musicTab.Font = Enum.Font.GothamBold
musicTab.TextSize = 16

musicTab.BackgroundTransparency = 1
musicTab.TextColor3 = Color3.fromRGB(0,170,255)

-- content
local content = Instance.new("Frame",main)

content.Size = UDim2.new(1,-150,1,-40)
content.Position = UDim2.new(0,150,0,40)

content.BackgroundTransparency = 1

-- textbox function
local function createBox(y,text)

local box = Instance.new("TextBox",content)

box.Size = UDim2.new(0.5,0,0,40)
box.Position = UDim2.new(0.25,0,y,0)

box.PlaceholderText = text

box.Font = Enum.Font.Gotham
box.TextSize = 14

box.BackgroundColor3 = Color3.fromRGB(40,40,40)
box.TextColor3 = Color3.new(1,1,1)

Instance.new("UICorner",box)

return box

end

local music = createBox(0.2,"Music ID")

local volume = createBox(0.4,"Volume")

local pitch = createBox(0.6,"Pitch")

-- play button
local play = Instance.new("TextButton",content)

play.Size = UDim2.new(0.3,0,0,40)
play.Position = UDim2.new(0.35,0,0.8,0)

play.Text = "Execute"

play.Font = Enum.Font.GothamBold

play.BackgroundColor3 = Color3.fromRGB(0,170,255)

play.TextColor3 = Color3.new(1,1,1)

Instance.new("UICorner",play)

-- play function
play.MouseButton1Click:Connect(function()

local asset = "rbxassetid://"..music.Text

local sound = "syn"..math.random(1,9999)

local r = getRemote()

r:FireServer(

"newSound",
sound,
game:GetService("TestService"),
asset,
tonumber(pitch.Text) or 1,
tonumber(volume.Text) or 1,
true)

r:FireServer("playSound",sound)

end)

-- drag
local drag=false
local dragStart,startPos

top.InputBegan:Connect(function(input)

if input.UserInputType==Enum.UserInputType.MouseButton1 then

drag=true
dragStart=input.Position
startPos=main.Position

end

end)

UIS.InputChanged:Connect(function(input)

if drag then

local delta=input.Position-dragStart

main.Position=UDim2.new(

startPos.X.Scale,
startPos.X.Offset+delta.X,

startPos.Y.Scale,
startPos.Y.Offset+delta.Y)

end

end)

UIS.InputEnded:Connect(function()
drag=false
end)

-- close
close.MouseButton1Click:Connect(function()
gui:Destroy()
end)
