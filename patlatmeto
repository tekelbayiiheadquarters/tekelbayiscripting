--// LUXUSWQ V4 MODERN HUB

local UIS = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local parent = pcall(function() return gethui() end)
and gethui() or game.CoreGui

local configFile = "luxuswq.json"

-- CONFIG SAVE
local HttpService = game:GetService("HttpService")

local config = {
music="",
volume="1",
pitch="1"
}

if isfile and isfile(configFile) then
config = HttpService:JSONDecode(readfile(configFile))
end

local function save()
if writefile then
writefile(configFile,HttpService:JSONEncode(config))
end
end

-- REMOTE
local function getRemote()

local function find(name,p)

local r=p:QueryDescendants(">>RemoteEvent#" .. name)

return r[1]

end

return find("AC6_FE_Sounds",Workspace)
or find("AC6_FE_Sounds",ReplicatedStorage)

end

-- GUI
local gui=Instance.new("ScreenGui",parent)

-- MAIN
local main=Instance.new("Frame",gui)

main.Size=UDim2.new(0,600,0,350)
main.Position=UDim2.new(0.5,-300,0.5,-175)

main.BackgroundColor3=Color3.fromRGB(255,182,193)

Instance.new("UICorner",main)

-- SIDEBAR
local side=Instance.new("Frame",main)

side.Size=UDim2.new(0,150,1,0)

side.BackgroundColor3=Color3.fromRGB(255,105,180)

Instance.new("UICorner",side)

-- TITLE
local title=Instance.new("TextLabel",side)

title.Size=UDim2.new(1,0,0,50)

title.Text="LUXUSWQ"

title.Font=Enum.Font.GothamBold
title.TextSize=22

title.BackgroundTransparency=1

-- TAB BUTTON
local musicTab=Instance.new("TextButton",side)

musicTab.Size=UDim2.new(1,0,0,40)
musicTab.Position=UDim2.new(0,0,0,60)

musicTab.Text="Music"

musicTab.Font=Enum.Font.GothamBold

-- CONTENT
local content=Instance.new("Frame",main)

content.Size=UDim2.new(1,-160,1,-20)
content.Position=UDim2.new(0,160,0,10)

content.BackgroundTransparency=1

-- CREATE BOX
local function box(y,placeholder,value)

local b=Instance.new("TextBox",content)

b.Size=UDim2.new(0.7,0,0,40)
b.Position=UDim2.new(0.15,0,y,0)

b.PlaceholderText=placeholder

b.Text=value

b.Font=Enum.Font.Gotham

Instance.new("UICorner",b)

return b

end

local music=box(0.1,"Music ID",config.music)
local volume=box(0.3,"Volume",config.volume)
local pitch=box(0.5,"Pitch",config.pitch)

-- PLAY BUTTON
local play=Instance.new("TextButton",content)

play.Size=UDim2.new(0.4,0,0,45)
play.Position=UDim2.new(0.3,0,0.7,0)

play.Text="PLAY"

play.Font=Enum.Font.GothamBold

play.BackgroundColor3=Color3.fromRGB(255,20,147)

Instance.new("UICorner",play)

-- PLAY FUNCTION
play.MouseButton1Click:Connect(function()

config.music=music.Text
config.volume=volume.Text
config.pitch=pitch.Text

save()

local asset="rbxassetid://"..music.Text

local sound="luxus"..math.random(1,9999)

local r=getRemote()

r:FireServer(

"newSound",
sound,
game:GetService("TestService"),
asset,
tonumber(pitch.Text),
tonumber(volume.Text),
true)

r:FireServer("playSound",sound)

end)

-- DRAG
local drag=false
local dragStart,startPos

main.InputBegan:Connect(function(input)

if input.UserInputType==Enum.UserInputType.MouseButton1 then

drag=true
dragStart=input.Position
startPos=main.Position

end

end)

UIS.InputChanged:Connect(function(input)

if drag then

local delta=input.Position-dragStart

main.Position=UDim2.new(

startPos.X.Scale,
startPos.X.Offset+delta.X,

startPos.Y.Scale,
startPos.Y.Offset+delta.Y)

end

end)

UIS.InputEnded:Connect(function()

drag=false

end)
